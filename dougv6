// Include the V5 Library
#include "vex.h"
  
// Allows for easier use of the VEX Library
using namespace vex;

digital_out dig1 = digital_out( Brain.ThreeWirePort.H );

int main() 
{
  int count = 0;

  while(1) 
  {
    if( Controller1.ButtonL1.pressing() ) 
    {
      dig1.set( true );
    }
    else 
    {
      dig1.set( false );
    }

    this_thread::sleep_for(10);
  }
}
